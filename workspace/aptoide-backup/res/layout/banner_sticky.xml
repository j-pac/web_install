<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/banner_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/store_avatar_and_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/banner_store_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <LinearLayout
                android:id="@+id/store_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/banner_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <cm.aptoide.pt.util.AutoScaleTextView
                    android:id="@+id/banner_store_description"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="2"
                    android:scrollbars="vertical"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <!-- <TextView -->
                <!-- android:id="@+id/store_description" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:ellipsize="end" -->
                <!-- android:fadeScrollbars="true" -->
                <!-- android:fadingEdge="vertical" -->
                <!-- android:lines="3" -->
                <!-- android:maxLines="2" -->
                <!-- android:scrollbarStyle="insideOverlay" -->
                <!-- android:scrollbars="vertical" -->
                <!-- android:singleLine="false" -->
                <!-- android:textColor="@android:color/white" -->
                <!-- android:text="@string/description" -->
                <!-- android:textStyle="italic" /> -->
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/dropshadow"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/container_dropshadow_aptoide" />

</LinearLayout>